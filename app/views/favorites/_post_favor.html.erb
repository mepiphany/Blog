<% favor = @post.favor_for(current_user) %>
<% if favor %>
<%= link_to icon("thumbs-up"), post_favorite_path(@post, favor), method: :delete, remote: true %>
<% else %>
<%= link_to icon("thumbs-o-up"), post_favorites_path(@post), method: :post, remote: true %>
<% end %>
(<%= @post.favorites.count %>)
