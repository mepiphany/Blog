<%= @user.errors.full_messages.join(", ") %>

<h1>Update password</h1>


<%= simple_form_for @user, url: update_password_path  do |f| %>
<div>
  <%= f.input :current_password %>
</div>
<div>
  <%= f.input :password %>
</div>
<div>
  <%= f.input :password_confirmation %>
</div>
  <%= f.button :submit %>
<% end %>
