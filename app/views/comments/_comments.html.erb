<div id="<%= dom_id(comment) %>" class="container">
  <div class="well well-sm comments-well-color">
      <p><strong><%= comment.user.first_name %></strong> <%= comment.body %>
      <%= comment.created_at.strftime("%Y-%b-%d") %>
    <% if can? :destroy, comment %>
    <%= link_to icon("pencil"), post_comment_path(@post, comment),
    method: :delete,
    remote: true,
    data: { confirm: "Are you Sure?"} %></p>
    <% end %>
  </div>
</div>
